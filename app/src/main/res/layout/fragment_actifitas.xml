<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black"
    android:gravity="center_horizontal"
    tools:context=".fragment.actifitas">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/actifitas_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktivitas Terbaru"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/actifitas_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berikut adalah ringkasan dari aktivitas terbaru yang Anda lakukan di aplikasi ini."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/button_detail_actifitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Detail"
        android:textColor="@android:color/white"
        android:backgroundTint="#00796B"
        android:padding="12dp" />

</LinearLayout>
