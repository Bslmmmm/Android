<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#3cb371"
    tools:context=".fragment.BerandaFragment">

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/beranda_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/beranda"
        android:contentDescription="@string/beranda_image_desc"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/beranda_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Beranda"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/beranda_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini adalah beranda aplikasi Anda. Di sini Anda dapat melihat berbagai fitur dan informasi penting."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center" />

</LinearLayout>
